# API key for authenticating requests to this service
API_KEY=your-secret-api-key

# Anthropic API key for Claude Code
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Bitbucket username (for git operations)
BB_USERNAME=your-username

# Bitbucket email (for API authentication)
BB_EMAIL=your-email@example.com

# Bitbucket API token with repository:write and pullrequest:write scopes
BB_API_TOKEN=xxxxx

# Bitbucket workspace (from URL: bitbucket.org/WORKSPACE/repo)
BB_WORKSPACE=your-workspace

# Bitbucket repository name
BB_REPO=your-repo

# Server port (optional, defaults to 3000)
PORT=3000
